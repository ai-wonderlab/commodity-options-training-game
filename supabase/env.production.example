# Production Environment Variables for Edge Functions
# Copy this to .env.production and fill in values
# These will be set as secrets in Supabase

# ICE Data Provider (when available)
ICE_API_KEY=your_ice_api_key
ICE_API_SECRET=your_ice_api_secret
ICE_WEBSOCKET_URL=wss://ice.com/marketdata

# Refinitiv Data Provider (when available)  
REFINITIV_API_KEY=your_refinitiv_key
REFINITIV_BASE_URL=https://api.refinitiv.com

# Data Provider Selection
DATA_PROVIDER=mock

# Game Configuration
MAX_PLAYERS_PER_SESSION=25
DEFAULT_BANKROLL=100000
DEFAULT_VAR_LIMIT=5000

# Scoring Weights
SCORING_ALPHA=0.1
SCORING_BETA=0.2
SCORING_GAMMA=0.1

# Market Configuration
DEFAULT_SPREAD_BPS=2
OPTIONS_SPREAD_BPS=5
FEE_PER_CONTRACT=2.50
FEE_PERCENTAGE=0.0001

# Risk Limits
MAX_DELTA=1000
MAX_GAMMA=100
MAX_VEGA=500
MAX_THETA=-200

# Session Defaults
SESSION_DURATION_MINUTES=90
REPLAY_SPEED_MAX=8

# Feature Flags
ENABLE_REPLAY_MODE=true
ENABLE_INSTRUCTOR_MODE=true
ENABLE_EXPORTS=true
ENABLE_DEBRIEF=true

# Compliance
REGION=EU
LANGUAGE=en
DATA_RETENTION_DAYS=30
SHOW_EDUCATIONAL_DISCLAIMER=true
