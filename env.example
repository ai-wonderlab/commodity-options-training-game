# Commodity Options Training Game - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# SUPABASE CONFIGURATION (Required)
# ============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ACCESS_TOKEN=your-access-token-here
SUPABASE_PROJECT_REF=your-project-ref-here

# Database URL (for migrations)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ============================================
# DATA PROVIDER CONFIGURATION
# ============================================
# Provider selection: mock | refinitiv | ice
DATA_PROVIDER=mock

# Data region: eu | us
DATA_REGION=eu

# Refinitiv Configuration (if using refinitiv)
REFINITIV_API_KEY=
REFINITIV_API_SECRET=
REFINITIV_ENDPOINT=wss://api.refinitiv.com/realtime/v1

# ICE Configuration (if using ice)
ICE_API_KEY=
ICE_API_SECRET=
ICE_ENDPOINT=https://api.ice.com/marketdata/v2

# ============================================
# AUTHENTICATION PROVIDERS
# ============================================
# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth (from Azure Portal)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
# GitHub Pages URL (for production)
NEXT_PUBLIC_BASE_URL=https://YOUR_USERNAME.github.io/commodity-options-training-game

# Node environment
NODE_ENV=development

# ============================================
# GAME CONFIGURATION DEFAULTS
# ============================================
# Default session settings (can be overridden per session)
DEFAULT_BANKROLL=1000000
DEFAULT_SESSION_DURATION_MINUTES=60
DEFAULT_MAX_PLAYERS=25

# Risk limits defaults
DEFAULT_DELTA_CAP=10000
DEFAULT_GAMMA_CAP=1000
DEFAULT_VEGA_CAP=50000
DEFAULT_THETA_CAP=10000
DEFAULT_VAR_LIMIT=100000

# Scoring weights
DEFAULT_BREACH_PENALTY_WEIGHT=10
DEFAULT_VAR_PENALTY_WEIGHT=5
DEFAULT_DRAWDOWN_PENALTY_WEIGHT=2

# Trading configuration
DEFAULT_CONTRACT_MULTIPLIER=1000
DEFAULT_TICK_SIZE=0.01
DEFAULT_MIN_SPREAD_BPS=2
DEFAULT_MAX_SPREAD_BPS=10

# Fee structure (per contract)
DEFAULT_EXCHANGE_FEE=0.50
DEFAULT_CLEARING_FEE=0.25
DEFAULT_COMMISSION=1.00

# ============================================
# MONITORING & LOGGING
# ============================================
# Log level: debug | info | warn | error
LOG_LEVEL=info

# Sentry DSN (optional, for error tracking)
SENTRY_DSN=

# ============================================
# COMPLIANCE & LEGAL
# ============================================
# Compliance mode settings
EDUCATION_ONLY_MODE=true
DATA_DELAY_MINUTES=15
SHOW_COMPLIANCE_BANNER=true

# ============================================
# CI/CD SECRETS (GitHub Actions)
# ============================================
# These are set in GitHub repository secrets, not in .env
# SUPABASE_URL
# SUPABASE_ANON_KEY
# SUPABASE_SERVICE_ROLE_KEY
# SUPABASE_ACCESS_TOKEN
# PROJECT_REF
# NEXT_PUBLIC_SUPABASE_URL
# NEXT_PUBLIC_SUPABASE_ANON_KEY
